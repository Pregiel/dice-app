<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:paddingTop="12dp">


    <TextView
        android:id="@+id/textView_roomlist_roomtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="1. Tom's room"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_roomlist_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:paddingEnd="8dp"
            android:singleLine="true"
            android:text="@string/roomList_element_owner"
            android:textColor="@color/colorSecondaryText"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView_roomlist_usersAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="@string/roomList_element_users"
            android:textAlignment="textEnd"
            android:textColor="@color/colorSecondaryText"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>